<macro|macroInput| name="renderTree">
    $ var node = macroInput.node;
    Name: ${node.name} Children:
    <if(node.children)>
        <ul>
            <for|child| of=node.children>
                <li>
                    <renderTree node=child/>
                </li>
            </for>
        </ul>
    </if>
</macro>
<renderTree node=input.node/>